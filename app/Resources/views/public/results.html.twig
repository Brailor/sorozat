{% extends 'base.html.twig' %}

{% set content = true %}

{% block result %}
 
<div class="col-md-8">
  <a href="/discover"><button class="btn btn-default">Vissza</button></a>

 {% if name is iterable %}
    {% for items in name %}
     <a class="result-item" href="/result/{{items.id}}">
     <div class="panel panel-default">  
      <div class="panel-heading">{{items.name}} &nbsp <p>Népszerűségi index: {{items.popularity|round(2)}}</p></div>
        <div class ="panel-body discovered_series" >
        <img src="http://image.tmdb.org/t/p/w185{{items.poster_path}}" alt="{{items.name}}">
          <p>{{items.overview}}</p>
        </div>
      </div>
     </a>
    {% endfor %}
 {% endif %}
 </div>

   
 {% endblock %}

  